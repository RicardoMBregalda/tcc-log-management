# Environment variables for Go API
# Copy this file to .env and customize for your environment

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=5001
SERVER_DEBUG=false

# MongoDB
MONGO_URL=mongodb://localhost:27017
MONGO_DATABASE=logdb
MONGO_COLLECTION=logs
MONGO_MIN_POOL_SIZE=10
MONGO_MAX_POOL_SIZE=100

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_ENABLED=true
REDIS_CACHE_TTL=600

# Fabric
FABRIC_API_URL=http://localhost:4000
FABRIC_CHANNEL=logchannel
FABRIC_CHAINCODE=logchaincode
FABRIC_SYNC_ENABLED=true

# WAL
WAL_ENABLED=true
WAL_DIRECTORY=/var/log/tcc-wal
WAL_CHECK_INTERVAL=5s

# Batching
BATCHING_ENABLED=true
BATCHING_AUTO_BATCH_SIZE=100
BATCHING_AUTO_BATCH_INTERVAL=30s

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
